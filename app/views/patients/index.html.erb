<div class="min-h-screen mt-12">
  <div class="container mx-auto px-35">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8">
      <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-gray-900">Pacientes</h1>
        <p class="text-gray-500 mt-1">Gestiona la información de tus pacientes</p>
      </div>
      <%= link_to root_path, class: 'flex items-center space-x-2 bg-white text-gray-700 hover:bg-blue-50 hover:text-blue-600 border border-gray-300 hover:border-blue-300 font-medium py-2.5 px-4 rounded-lg transition-all duration-200 shadow-sm hover:shadow' do %>
        <span>Inicio</span>
      <% end %>
    </div>

    <% if @patients.any? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gradient-to-r from-[rgb(0_123_254)] to-blue-600 backdrop-blur-sm border-b border-gray-200">
              <tr>
                <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-white uppercase tracking-wider">Paciente</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-white uppercase tracking-wider">Género</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-white uppercase tracking-wider">Edad</th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-white uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @patients.each do |patient| %>
                <tr class="group hover:bg-blue-50/50 transition-all duration-200">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gradient-to-r from-blue-100 to-indigo-100 flex items-center justify-center text-blue-600 font-medium group-hover:from-blue-200 group-hover:to-indigo-200 transition-colors">
                        <%= patient.name.split.map(&:first).join.upcase %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-semibold text-gray-900"><%= patient.name %></div>
                        <div class="text-xs text-gray-500">ID: <%= patient.id %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= patient.gender == 'Femenino' ? 'bg-pink-100 text-pink-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= patient.gender %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900 font-medium"><%= patient.age %></div>
                    <div class="text-xs text-gray-500">años</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                      <%= link_to patient, class: 'p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors duration-150', title: 'Ver detalles' do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <% end %>
                      <%= link_to edit_patient_path(patient), class: 'p-2 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors duration-150', title: 'Editar' do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <% end %>
                      <%= link_to patient, method: :delete,
                          data: { confirm: '¿Estás seguro de eliminar este paciente?', turbo_confirm: '¿Estás seguro de eliminar este paciente?' }, 
                          class: 'p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-150', title: 'Eliminar' do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
        <div class="max-w-md mx-auto">
          <div class="w-20 h-20 mx-auto rounded-full bg-blue-50 flex items-center justify-center text-blue-500 mb-4">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay pacientes registrados</h3>
          <p class="text-gray-500 mb-6">Comienza agregando un nuevo paciente a tu lista.</p>
          <div>
            <%= link_to new_patient_path, class: 'inline-flex items-center space-x-2 px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm hover:shadow' do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              <span>Agregar primer paciente</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>