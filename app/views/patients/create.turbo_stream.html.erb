<% if @patient.persisted? %>
  <%= turbo_stream.update "patient_form" do %>
    <%= form_with(model: Patient.new,
                 data: {
                   controller: "form",
                   action: "turbo:submit-end->modal#handleSuccess turbo:submit-end->form#reset"
                 }) do |form| %>
      <!-- Campos del formulario vacíos -->
      <div class="mb-4">
        <%= form.label :name, "Nombre", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :name, required: true,
              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :gender, "Género", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.select :gender,
              ["Masculino", "Femenino"],
              { include_blank: "Seleccionar género" },
              required: true,
              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :age, "Edad", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :age, required: true, min: 0,
              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-between mt-6">
        <%= button_tag "Cancelar", 
              type: "button",
              data: { action: "click->modal#close" },
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>

        <%= form.submit "Guardar", 
              class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.update "patient_form" do %>
    <%= form_with(model: @patient,
                 data: {
                   controller: "form",
                   action: "turbo:submit-end->modal#handleSuccess turbo:submit-end->form#reset"
                 }) do |form| %>
      <% if @patient.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
          <ul>
            <% @patient.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Campos del formulario con valores previos -->
      <div class="mb-4">
        <%= form.label :name, "Nombre", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :name, required: true,
              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{@patient.errors[:name].any? ? 'border-red-500' : ''}" %>
      </div>

      <div class="mb-4">
        <%= form.label :gender, "Género", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.select :gender,
              ["Masculino", "Femenino"],
              { include_blank: "Seleccionar género" },
              required: true,
              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{@patient.errors[:gender].any? ? 'border-red-500' : ''}" %>
      </div>

      <div class="mb-4">
        <%= form.label :age, "Edad", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :age, required: true, min: 0,
              class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline #{@patient.errors[:age].any? ? 'border-red-500' : ''}" %>
      </div>

      <div class="flex items-center justify-between mt-6">
        <%= button_tag "Cancelar", 
              type: "button",
              data: { action: "click->modal#close" },
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>

        <%= form.submit "Guardar", 
              class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  <% end %>
<% end %>