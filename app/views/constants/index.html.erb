<div id="flash" class="flash-container"></div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="modal">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div class="flex-1">
      <h1 class="text-3xl font-bold text-gray-900 bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
        Constantes Médicas
      </h1>
      <p class="mt-2 text-lg text-gray-600 font-light">Gestión de constantes médicas de pacientes</p>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex items-center space-x-3">
      <%= button_tag "Pacientes",
            type: "button",
            data: {
              action: "click->modal#open",
              target: "patient-modal"
            },
            class: 'group inline-flex items-center px-6 py-3 border-2 border-purple-600 text-base font-semibold rounded-xl text-purple-600 bg-white hover:bg-purple-600 hover:text-white hover:shadow-lg hover:shadow-purple-200 transform hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-purple-200 transition-all duration-300 ease-out' do %>
        <svg class="-ml-1 mr-3 h-5 w-5 transition-transform duration-300 group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
        </svg>
        Pacientes
      <% end %>

      <%= button_tag "Nueva lectura",
            type: "button",
            data: {
              action: "click->modal#open",
              target: "constant-modal"
            },
            class: 'group inline-flex items-center px-6 py-3 border border-transparent text-base font-semibold rounded-xl text-white bg-gradient-to-r from-[rgb(40_166_69)] to-green-600 hover:from-green-600 hover:to-[rgb(40_166_69)] hover:shadow-lg hover:shadow-green-200 transform hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-green-200 transition-all duration-300 ease-out' do %>
        <svg class="-ml-1 mr-3 h-5 w-5 transition-transform duration-300 group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Nueva lectura
      <% end %>
    </div>
  </div>

  <div class="mb-6 transform transition-all duration-300 hover:shadow-md">
    <%= render 'filters/filters' %>
  </div>

  <% if @constants.any? %>
    <div class="bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-100 hover:shadow-3xl transition-all duration-500">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200/60">
          <thead class="bg-gradient-to-r from-[rgb(0_123_254)] to-blue-600">
            <tr>
              <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-white uppercase tracking-wider group cursor-pointer hover:bg-blue-600 transition-colors duration-200">
                <div class="flex items-center space-x-2">
                  <span>PACIENTE</span>
                  <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-white uppercase tracking-wider group cursor-pointer hover:bg-blue-600 transition-colors duration-200">
                <div class="flex items-center space-x-2">
                  <span>TIPO</span>
                  <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-white uppercase tracking-wider group cursor-pointer hover:bg-blue-600 transition-colors duration-200">
                <div class="flex items-center space-x-2">
                  <span>VALOR</span>
                  <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-white uppercase tracking-wider group cursor-pointer hover:bg-blue-600 transition-colors duration-200">
                <div class="flex items-center space-x-2">
                  <span>FECHA</span>
                  <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-8 py-4 text-left text-sm font-semibold text-white uppercase tracking-wider group cursor-pointer hover:bg-blue-600 transition-colors duration-200">
                <div class="flex items-center space-x-2">
                  <span>ESTADO</span>
                  <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                  </svg>
                </div>
              </th>
              <th scope="col" class="px-8 py-4 text-right text-sm font-semibold text-white uppercase tracking-wider">
                ACCIONES
              </th>
            </tr>
          </thead>
          <tbody id="constants-table-body" class="bg-white divide-y divide-gray-200/60">
            <% @constants.each_with_index do |constant, idx| %>
              <%= render 'constants/constant', constant: constant, idx: idx %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white shadow-2xl rounded-2xl border border-gray-100 transform hover:scale-[1.01] transition-all duration-500">
      <div class="px-8 py-16 sm:p-20 text-center">
        <div class="mx-auto w-24 h-24 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-full flex items-center justify-center mb-6 transform hover:scale-110 transition-transform duration-300">
          <svg class="h-12 w-12 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">No hay constantes médicas registradas</h3>
        <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">Comienza registrando tu primer constante médica para llevar un control preciso.</p>
        <div class="flex justify-center">
          <%= button_tag "Registrar primera constante",
                type: "button",
                data: {
                  action: "click->modal#open",
                  target: "constant-modal"
                },
                class: 'group inline-flex items-center px-8 py-4 border border-transparent text-lg font-semibold rounded-xl text-white bg-gradient-to-r from-[rgb(40_166_69)] to-green-600 hover:from-green-600 hover:to-[rgb(40_166_69)] hover:shadow-2xl hover:shadow-green-200 transform hover:-translate-y-1 focus:outline-none focus:ring-4 focus:ring-green-200 transition-all duration-300 ease-out' do %>
            <svg class="-ml-1 mr-3 h-6 w-6 transition-transform duration-300 group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Registrar primera constante
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render 'modal_patient' %>
  <%= render 'modal_constant' %>
</div>