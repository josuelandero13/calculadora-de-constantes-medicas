 <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Constantes M√©dicas</h1>
      <p class="mt-1 text-sm text-gray-500">Gesti√≥n de constantes m√©dicas de pacientes</p>
    </div>
    <%= link_to new_constant_path,
        data: { turbo_frame: "modal" },
        class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-[rgb(40_166_69)] hover:bg-[#2e8b57] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#007bfe] transition-colors duration-200' do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      Nueva lectura
    <% end %>
  </div>

  <div class="flex flex-wrap items-start gap-4">
    <details class="bg-white p-4 rounded-lg shadow flex-1 relative" data-controller="filters" close>
    <summary class="flex items-center justify-between cursor-pointer">
      <div class="flex items-center space-x-3">
        <h2 class="text-lg font-semibold">Filtros</h2>
        <span class="text-sm text-gray-500">(compacto ‚Äî despliega para ver m√°s)</span>
      </div>
      <svg data-filters-target="chevron" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 transition-transform duration-200" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.939l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.25 8.27a.75.75 0 01-.02-1.06z" clip-rule="evenodd" />
      </svg>
    </summary>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 mb-6 space-y-8">
      <div class="space-y-6">
        <div class="space-y-2">
          <h3 class="text-sm font-medium text-gray-700">Estado de salud</h3>
          <div class="flex flex-wrap gap-2">
            <%= link_to constants_path,
                class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 flex items-center space-x-1 #{params[:state].blank? ? 'bg-blue-500 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
              <span>Todos</span>
              <span class="bg-white/20 text-xs px-2 py-0.5 rounded-full"><%= Constant.count %></span>
            <% end %>

            <%= link_to constants_path(state: 'Normal'),
                class: "px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 flex items-center space-x-1 #{params[:state] == 'Normal' ? 'bg-green-500 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
              <span>üü¢ Normal</span>
              <span class="bg-white/20 text-xs px-2 py-0.5 rounded-full"><%= Constant.where(calculated_state: 'Normal').count %></span>
            <% end %>
          </div>
        </div>

        <%= render 'filters/type_filter' %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-gray-100">
        <%= render 'filters/patient_filter' %>
        <%= render 'filters/date_filter' %>
      </div>
    </details>

    <%= render 'filters/clear_filters' %>
  </div>

  <% if @constants.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-[rgb(0_123_254)]">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">PACIENTE</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">TIPO</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">VALOR</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">FECHA</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">ESTADO</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">ACCIONES</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @constants.each_with_index do |constant, idx| %>
              <% state_display = constant_state_display(constant) %>
              <% row_class = idx >= 10 ? 'hidden constant-extra-row' : '' %>

              <tr class="hover:bg-gray-50 transition-colors duration-150 <%= row_class %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= constant.patient.name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-700"><%= constant.constant_type.name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold text-gray-900">
                    <%= constant.value %>
                    <%= constant.constant_type.unit %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-700"><%= constant.date_time_taken&.strftime('%d/%m/%Y %H:%M') %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-2">
                    <span class="h-3 w-3 rounded-full <%= state_display[:color] %>"></span>
                    <span class="text-sm text-gray-700">
                      <%= state_display[:text] %>
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-2">
                    <%= link_to constant_path(constant),
                        class: 'text-[#007bfe] hover:text-[#0069d9] transition-colors duration-200 p-1 rounded-full hover:bg-blue-50' do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                    <%= link_to edit_constant_path(constant),
                        class: 'text-yellow-600 hover:text-yellow-800 transition-colors duration-200 p-1 rounded-full hover:bg-yellow-50' do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                      </svg>
                    <% end %>
                    <%= button_to constant_path(constant),
                        method: :delete,
                        form: {
                          class: 'inline',
                          data: {
                            turbo_confirm: '¬øEst√°s seguro de eliminar este registro?',
                            turbo_method: :delete
                          }
                        },
                        class: 'text-red-600 hover:text-red-800 transition-colors duration-200 p-1 rounded-full hover:bg-red-50' do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <% if @constants.size > 10 %>
      <div class="mt-4 flex justify-center">
        <button id="show-more-btn" class="px-4 py-2 rounded-md bg-gray-100 text-gray-700 border border-gray-200 hover:bg-gray-200 transition-colors">Mostrar m√°s (<%= @constants.size - 10 %>)</button>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No hay constantes m√©dicas</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza registrando tu primer constante m√©dica.</p>
        <div class="mt-6">
          <%= link_to new_constant_path, class: 'inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-[rgb(40_166_69)] hover:bg-[#0069d9] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#007bfe] transition-colors duration-200' do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Nueva lectura
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

