<% if @constant.valid? %>
  <%= turbo_stream.update "constant_#{@constant.id}" do %>
    <%= render 'constant', constant: @constant, idx: @index %>
  <% end %>

  <%= turbo_stream.update "constant-flash" do %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= flash.now[:notice] %></span>
    </div>
  <% end %>
<% else %>
  <%= turbo_stream.update "constant_form" do %>
    <!-- Formulario con errores -->
  <% end %>
<% end %>