<div class="space-y-3">
  <h3 class="text-sm font-semibold text-gray-900 flex items-center gap-2">
    <svg class="w-4 h-4 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
    </svg>
    Tipo de constante
  </h3>
  <div class="flex flex-wrap gap-2">
    <%= link_to constants_path,
        class: "px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 flex items-center space-x-2 border-2 #{params[:type].blank? ? 'bg-indigo-500 text-white border-indigo-500 shadow-lg shadow-indigo-200' : 'bg-white text-gray-700 border-gray-200 hover:border-indigo-300 hover:bg-indigo-50 hover:text-indigo-700'}" do %>
      <span>Todos</span>
      <span class="bg-white/20 text-xs px-2 py-1 rounded-full font-semibold min-w-6"><%= Constant.count %></span>
    <% end %>

    <% @constant_types.each do |type| %>
      <%= link_to constants_path(type: type.id, state: params[:state], patient: params[:patient], start_date: params[:start_date], end_date: params[:end_date]),
          class: "px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 flex items-center space-x-2 border-2 #{params[:type].to_i == type.id ? 'bg-indigo-500 text-white border-indigo-500 shadow-lg shadow-indigo-200' : 'bg-white text-gray-700 border-gray-200 hover:border-indigo-300 hover:bg-indigo-50 hover:text-indigo-700'}" do %>
        <span><%= type.name %></span>
        <span class="bg-white/20 text-xs px-2 py-1 rounded-full font-semibold min-w-6"><%= type.display_constants_count %></span>
      <% end %>
    <% end %>
  </div>
</div>