<% if params.values.any? { |v| v.present? && !['controller', 'action'].include?(v) } %>
  <div class="mb-4 flex items-center gap-3 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
    <%= link_to "ðŸ§¹ Limpiar filtros", constants_path, 
        class: "px-3 py-1 bg-white border border-gray-300 rounded text-sm text-gray-700 hover:bg-gray-50" %>

    <span class="text-sm text-gray-600">Filtros aplicados:</span>

    <div class="flex flex-wrap gap-1">
      <% params.each do |key, value| %>
        <% if value.present? && !['controller', 'action'].include?(key) %>
          <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded text-xs">
            <%= key %>: <%= value %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
